<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#cdc9ff" />
            <gradient android:angle="-90" android:startColor="#cdc9ff" android:endColor="#cdc9ff"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#cdc9ff" />
            <solid android:color="#cdc9ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#cdc9ff" />
            <gradient android:angle="-90" android:startColor="#cdc9ff" android:endColor="#cdc9ff" />
        </shape>
    <stroke
            android:width="10dp"
            android:color="#288100" />
    </item>
</selector>